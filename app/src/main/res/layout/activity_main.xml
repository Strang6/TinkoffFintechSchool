<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.strang6.tinkofffintechschool.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/colorButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="colorOnClick"
            android:text="@string/graphColor" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add" />

        <CheckBox
            android:id="@+id/smoothingCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/smoothing" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/signCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onVisibilityClick"
                android:paddingRight="10dp"
                android:text="@string/sign" />

            <EditText
                android:id="@+id/xSignEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/x"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/ySignEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/y"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/stepsCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onVisibilityClick"
                android:paddingRight="10dp"
                android:text="@string/steps" />

            <EditText
                android:id="@+id/xStepEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/x"
                android:inputType="numberDecimal"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/yStepEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/y"
                android:inputType="numberDecimal"
                android:visibility="invisible" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/gridCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/grid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pointList" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/addCoordinatesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner"
                android:onClick="addCoordinatesOnClick"
                app:srcCompat="@android:drawable/ic_input_add" />

            <ImageButton
                android:id="@+id/deleteCoordinatesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/roundcorner"
                android:onClick="deleteCoordinatesOnClick"
                app:srcCompat="@android:drawable/ic_delete" />

            <LinearLayout
                android:id="@+id/coordinatesLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.strang6.tinkofffintechschool.CoordinatesView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.strang6.tinkofffintechschool.CoordinatesView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="okOnClick"
            android:text="@string/okButton" />

    </LinearLayout>

</ScrollView>


